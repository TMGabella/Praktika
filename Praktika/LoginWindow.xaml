<Window x:Class="Praktika.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход в Бюро Знакомств" Height="300" Width="300"
        Background="#FDFDFD">
    

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
            <TextBlock Text="Вход в Бюро Знакомств" FontSize="20" Margin="0,0,0,20" HorizontalAlignment="Center" Foreground="#FF4081"/>
            

            <!-- Поле ввода имени пользователя -->
            <StackPanel>
                <Label Content="Имя пользователя" Foreground="Gray"/>
                <TextBox x:Name="usernameTextBox" Margin="5" Height="35"/>
            </StackPanel>

            <!-- Поле ввода пароля -->
            <StackPanel>
                <Label Content="Пароль" Foreground="Gray"/>
                <PasswordBox x:Name="passwordBox" Margin="5" Height="35"/>
            </StackPanel>

            
            <Button Content="Войти" Margin="10" Height="35" Background="#FF4081" Foreground="White" FontWeight="Bold" Click="LoginButton_Click"/>
            
        </StackPanel>
    </Grid>
</Window>
